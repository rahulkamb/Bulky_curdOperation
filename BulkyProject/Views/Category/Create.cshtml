@model Category

<form method="post">
    <div class=" pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Category</h2>
            <hr />
        </div>
        <div class="mb-4 row">
            <label asp-for="Name" ></label>
            <input asp-for="Name" class="form-control mt-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-4 row">
            <label asp-for="CategoryOrder" ></label>
            <input asp-for="CategoryOrder" class="form-control mt-3" />
            <span asp-validation-for="CategoryOrder" class="text-danger"></span>
        </div>
       <div>
            <button type="submit" class="btn btn-primary form-control" style="width:250px">Create</button>
            <a asp-controller="Category" asp-action="Index">
                <button type="button" class="btn btn-primary mx-lg-3" style="width:150px">
                    Cancel
                </button>
            </a>
       </div>
    </div>
</form>